.flex{
  display:flex;
  flex-direction:column;
  align-items: center;
  background-color: #FFFFFF;
}

.info{
  margin-top:5%;
  font-size: 12px;
  color: #F05050;
  
}

.icon{
  display:flex;
  flex-direction:row;
  justify-content: center;
  width:100%;
}

.in{
  margin-top:1%;
  border:1px #F05050 solid;
  border-radius: 5px;
  background-color: #FFFFFF;
  width:300px;
  color:#F05050;
  text-align:center;
  font-size:10px;

}

.ta{
  margin:2%;
  border:1px #F05050 solid;
  border-radius: 5px;
  background: white;

  width:300px;
  color:#F05050;
  text-align:left;
  font-size:10px;
  
}

.img{
 display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  width:25%;
  margin-bottom:5%;
  border-radius:5px;

}

.title{
  margin-top:5%;
  font-size: 12px;
  color: #F05050;
  font-weight: bold;
}

.titleImg{
  
  width:100%;

}

#end{
  font-size: 110%;
  margin-bottom: 10%;
}

.picker{
  border-radius: 5px;
  margin-top:1%;
  border:1px #F05050 solid;
  background: white;
  padding-bottom:2%;
  padding-top:2%;
  width:300px;
  color:#F05050;
  text-align:center;
  font-size:10px;
}
